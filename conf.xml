<?xml version="1.0" encoding="UTF-8"?>
<property>
    <!-- _________________________________ 元数据库相关 _________________________________ -->
    <!-- 元数据库服务器地址 -->
    <entry key="metadb.url">localhost:8889</entry>

    <!-- 元数据库用户名 -->
    <entry key="metadb.username">root</entry>

    <!-- 元数据库用户密码 -->
    <entry key="metadb.password">root</entry>

    <!-- 元数据库的数据库名 -->
    <entry key="metadb.dbname">metadb</entry>

    <!-- 元数据库 JDBC 驱动 -->
    <entry key="metadb.jdbc.driver">com.mysql.jdbc.Driver</entry>


    <!-- _________________________________ 底层库相关 _________________________________ -->
    <!-- 底层库 1 类型，可填：MySQL / Hive -->
    <entry key="innerdb.db1">enable</entry>

    <entry key="innerdb.db1.type">MySQL</entry>

    <!-- 底层库 1 地址 -->
    <entry key="innerdb.db1.url">localhost:8889</entry>

    <!-- 底层库 1 用户名 -->
    <entry key="innerdb.db1.username">root</entry>

    <!-- 底层库 1 用户密码 -->
    <entry key="innerdb.db1.password">root</entry>

    <!-- 底层库 1 JDBC 驱动 -->
    <entry key="innerdb.db1.jdbc.driver">com.mysql.jdbc.Driver</entry>

    <!-- 底层库 2 类型，可填：MySQL / Hive -->
    <entry key="innerdb.db2">enable</entry>

    <entry key="innerdb.db2.type">Hive</entry>

    <!-- 底层库 2 地址 -->
    <entry key="innerdb.db2.url">10.4.21.220:10000</entry>

    <!-- 底层库 2 用户名 -->
    <entry key="innerdb.db2.username">hadoop</entry>

    <!-- 底层库 2 用户密码 -->
    <entry key="innerdb.db2.password">hadoop</entry>

    <!-- 底层库 2 JDBC 驱动 -->
    <entry key="innerdb.db2.jdbc.driver">org.apache.hive.jdbc.HiveDrive</entry>


    <!-- _________________________________ 默认底层库相关 _________________________________ -->
    <!-- 默认底层库 -->
    <entry key="innerdb.dafault.database">db1</entry>
</property>